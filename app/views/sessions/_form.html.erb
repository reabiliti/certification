<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(:session, url: login_path) do |f| %>
      <%= f.input :email %>
      <%= f.input :password %>

      <%= f.button :submit, "Войти", class: 'btn btn-primary center-block' %>
    <% end %>
    <p>Новый пользователь? <%= link_to "Зарегистрироваться", signup_path %></p>
  </div>
</div>
