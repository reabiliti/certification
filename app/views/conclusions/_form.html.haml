= simple_form_for conclusion do |f|
  = f.input :solution_proposal_id, as: :hidden
  .row
    .col-md-6
      = f.input :number
    .col-md-6
      = f.input :date_from,
                as: :date, start_year: Date.today.year - 10,
                end_year: Date.today.year + 10,
                html5: true
  = f.input :applic_name_product, as: :text, input_html: { rows: 5 }
  .row
    .col-md-6
      = f.input :applic_code_okp, as: :text, input_html: { rows: 2 }
    .col-md-6
      = f.input :applic_code_tn_ved, as: :text, input_html: { rows: 2 }
  = f.input :manuf_name
  = f.input :manuf_address, as: :text, input_html: { rows: 6 }
  = f.input :manuf_postcode
  = f.input :manuf_doc, as: :text, input_html: { rows: 3 }
  = f.input :manuf_regulations, as: :text, input_html: { rows: 1 }
  = f.input :desc_scheme_cert, as: :text, input_html: { rows: 5 }
  = f.input :test_report, as: :text, input_html: { rows: 5 }
  = f.input :list_doc_product, as: :text, input_html: { rows: 4 }
  = f.input :conformity, as: :text, input_html: { rows: 2 }
  = f.input :may_be_issued, collection: MAY_BE_ISSUE, include_blank: false
  .row
    .col-md-5
      = f.input :cert_expiry_date,
                as: :date, start_year: Date.today.year - 10,
                end_year: Date.today.year + 10,
                html5: true
  = f.input :add_info, as: :text, input_html: { rows: 5 }
  = f.input :attachment
  .row
    .col-md-6
      = f.input :expert
    .col-md-6
      = f.input :sign_date,
                as: :date, start_year: Date.today.year - 10,
                end_year: Date.today.year + 10,
                html5: true

  .col.pt-5
    = f.submit t("conclusions.buttons.#{button}"), class: 'btn btn-dark btn-block'
