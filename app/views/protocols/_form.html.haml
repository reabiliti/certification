= simple_form_for protocol do |f|

  = f.input :solution_proposal_id, as: :hidden
  .row
    .col-md-4
      = f.input :date_from,
                as: :date, start_year: Date.today.year - 10,
                end_year: Date.today.year + 10,
                html5: true
  = f.input :applic_name_product, as: :text, input_html: { rows: 5 }
  .row
    .col-md-6
      = f.input :applic_code_okp, as: :text, input_html: { rows: 2 }
    .col-md-6
      = f.input :applic_code_tn_ved, as: :text, input_html: { rows: 2 }
  = f.input :manuf_name
  = f.input :manuf_address, as: :text, input_html: { rows: 6 }
  = f.input :manuf_postcode
  = f.input :origin_cert
  = f.input :info_product
  .row
    .col-md-4
      = f.input :date_issue_product,
                as: :date, start_year: Date.today.year - 10,
                end_year: Date.today.year + 10,
                html5: true
    .col-md-8
      = f.input :shelf_life
  = f.input :info_box
  = f.input :label_product
  = f.input :manuf_regulations
  = f.input :evaluation_product, as: :text, input_html: { rows: 5 }
  = f.input :requirement_test, collection: NEED_TESTS, include_blank: false
  = f.input :list_indicators, as: :text, input_html: { rows: 5 }
  = f.input :conclusion, as: :text, input_html: { rows: 2 }
  = f.input :expert

  .col.pt-5
    = f.submit t("protocols.buttons.#{button}"), class: 'btn btn-dark btn-block'
