= simple_form_for solution_proposal do |f|

  = f.input :proposal_id, as: :hidden

  .row
    .col-md-4
      = f.input :number
    .col-md-4
      = f.input :date_from,
                as: :date, start_year: Date.today.year - 10,
                end_year: Date.today.year + 10,
                html5: true
    .col-md-4
      = f.input :solution, collection: SOLUTIONS, include_blank: false
  = f.input :applic_name_product, as: :text, input_html: { rows: 5 }
  .row
    .col-md-6
      = f.input :applic_code_okp, as: :text, input_html: { rows: 2 }
    .col-md-6
      = f.input :applic_code_tn_ved, as: :text, input_html: { rows: 2 }
  = f.input :manuf_name, as: :text, input_html: { rows: 3 }
  = f.input :manuf_address, as: :text, input_html: { rows: 6 }
  = f.input :manuf_postcode
  = f.input :manuf_doc, as: :text, input_html: { rows: 3 }
  = f.input :manuf_list_doc, as: :text, input_html: { rows: 3 }
  = f.input :manuf_regulations, as: :text, input_html: { rows: 1 }
  = f.input :desc_scheme_cert, as: :text, input_html: { rows: 3 }
  = f.input :test_lab, as: :text, input_html: { rows: 4 }
  .row
    .col-md-6
      = f.input :sampling, collection: ORGANIZATION_SAMPLES, include_blank: false
    .col-md-6
      = f.input :basis_work
  = f.input :list_doc_product, as: :text, input_html: { rows: 6 }
  = f.input :add_info, as: :text, input_html: { rows: 3 }
  .row
    .col-md-6
      = f.input :os_chief_position
    .col-md-6
      = f.input :os_chief_name
  .row
    .col-md-6
      = f.input :expert
    .col-md-6
      = f.input :executor
  = f.input :applic_sign
  = f.input :applic_name

  .col.pt-5
    = f.submit t("solution_proposals.buttons.#{button}"), class: 'btn btn-dark btn-block'
