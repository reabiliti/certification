<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <% if @solution_proposal.errors.any? %>
      <div class="error text-danger">
        <p>
          <%= pluralize(@solution_proposal.errors.count, "error") %>:
        </p>
        <ul>
          <% @solution_proposal.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= simple_form_for [ @solution_proposal ], html: { class: "form-horizontal" }, wrapper: :horizontal_form do |f| %>

      <%= f.input :proposal_id, as: :hidden %>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <%= f.label :solprop_number, class: 'col-sm-8 control-label' %>
            <div class="col-sm-4">
              <%= f.input_field :solprop_number, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <%= f.label :solprop_date_from, class: 'col-sm-7 control-label' %>
          <div class="col-sm-5">
            <%= f.input_field :solprop_date_from, as: :date, start_year: Date.today.year - 10,
                                                                end_year: Date.today.year + 10,
                                                                html5: true, class: 'form-control' %>
          </div>
        </div>
      </div>

      <%= f.input :solprop_solution, collection: [ "о проведении", "об отказе в проведении" ], include_blank: false %>
      <%= f.input :solprop_applic_name_product, as: :text, input_html: { rows: 5 } %>
      <%= f.input :solprop_applic_code_okp, as: :text, input_html: { rows: 2 } %>
      <%= f.input :solprop_applic_code_tn_ved, as: :text, input_html: { rows: 2 } %>
      <%= f.input :solprop_manuf_name, as: :text, input_html: { rows: 3 } %>
      <%= f.input :solprop_manuf_address, as: :text, input_html: { rows: 6 } %>
      <%= f.input :solprop_manuf_postcode %>
      <%= f.input :solprop_manuf_doc, as: :text, input_html: { rows: 3 } %>
      <%= f.input :solprop_manuf_list_doc, as: :text, input_html: { rows: 3 } %>
      <%= f.input :solprop_regulations, as: :text, input_html: { rows: 1 } %>
      <%= f.input :solprop_desc_scheme_cert, as: :text, input_html: { rows: 3 }  %>
      <%= f.input :solprop_test_lab, as: :text, input_html: { rows: 4 } %>
      <%= f.input :solprop_sampling, collection: [ "орган по сертификации", "испытательная лаборатория" ],
                                     include_blank: false %>
      <%= f.input :solprop_list_doc_product, as: :text, input_html: { rows: 6 } %>
      <%= f.input :solprop_basis_work %>
      <%= f.input :solprop_add_info %>
      <%= f.input :solprop_chief_name %>
      <%= f.input :solprop_chief_org %>
      <%= f.input :solprop_expert %>
      <%= f.input :solprop_executor %>
      <div class="row">
        <div class="form-group">
          <%= f.label :solprop_applic_sign, class: 'col-sm-4 control-label' %>
          <div class="col-sm-8">
            <%= f.input_field :solprop_applic_sign %>
          </div>
        </div>
      </div>
      <%= f.input :solprop_applic_name %>

      <%= f.button :submit, "Сохранить решение по заявке", class: 'btn btn-primary center-block' %>
    <% end %>
  </div>
</div>
