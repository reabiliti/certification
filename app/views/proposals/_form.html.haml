.page-body
  = simple_form_for proposal do |f|
    .row
      .col-md-6
        = f.input :prop_number
      .col-md-6
        = f.input :prop_date_from,
                  as: :date, start_year: Date.today.year - 10,
                  end_year: Date.today.year + 10,
                  html5: true
    = f.input :prop_cert_system
    %h2.py-3 Заявитель
    = f.input :prop_applic_name, as: :text, input_html: { rows: 2 }
    = f.input :prop_applic_reg_doc, as: :text, input_html: { rows: 2 }
    = f.input :prop_applic_address, as: :text, input_html: { rows: 3 }
    = f.input :prop_applic_bank_detail, as: :text, input_html: { rows: 1 }
    .row
      .col-md-3
        = f.input :prop_applic_postcode
      .col-md-3
        = f.input :prop_applic_phone
      .col-md-3
        = f.input :prop_applic_fax
      .col-md-3
        = f.input :prop_applic_email
    %h2.py-3 Поисковые реквизиты заявителя
    .row
      .col-md-3
        = f.input :prop_applic_code_okato
      .col-md-3
        = f.input :prop_applic_code_okonh
      .col-md-3
        = f.input :prop_applic_code_okved
      .col-md-3
        = f.input :prop_applic_code_okpo
    .row
      .col-md-4
        = f.input :prop_applic_type_own, collection: TYPE_OWNERSHIP, include_blank: false
      .col-md-4
        = f.input :prop_applic_inn
      .col-md-4
        = f.input :prop_applic_kpp
    = f.input :prop_applic_chief
    = f.input :prop_applic_name_product, as: :text, input_html: { rows: 7 }
    .row
      .col-md-6
        = f.input :prop_applic_code_okp, as: :text, input_html: { rows: 2 }
      .col-md-6
        = f.input :prop_applic_code_tn_ved, as: :text, input_html: { rows: 2 }
    = f.input :prop_applic_from_issue, collection: TYPE_PRODUCTION, include_blank: false
    %h2.py-3 Изготовитель
    = f.input :prop_manuf_name, as: :text, input_html: { rows: 2 }
    = f.input :prop_manuf_address, as: :text, input_html: { rows: 2 }
    = f.input :prop_manuf_postcode
    = f.input :prop_manuf_doc, as: :text, input_html: { rows: 3 }
    %h2.py-3 Поисковые реквизиты изготовителя
    .row
      .col-md-3
        = f.input :prop_manuf_code_okato
      .col-md-3
        = f.input :prop_manuf_code_okonh
      .col-md-3
        = f.input :prop_manuf_code_okved
      .col-md-3
        = f.input :prop_manuf_code_okpo
    .row
      .col-md-6
        = f.input :prop_manuf_type_own, collection: TYPE_OWNERSHIP, include_blank: false
      .col-md-6
        = f.input :prop_manuf_inn
    = f.input :prop_manuf_regulations, as: :text, input_html: { rows: 2 }
    %h2.py-3 Дополнительные сведения о продукции и заявителе
    .row
      .col-md-6
        = f.input :prop_manuf_scheme_cert, collection: CERTIFICATION_SCHEME, include_blank: false
      .col-md-6
        = f.input :prop_manuf_group_complexity, collection: COMPLIXITY_GROUP, include_blank: false
    = f.input :prop_manuf_count_sort_cert
    = f.input :prop_manuf_list_doc, as: :text, input_html: { rows: 3 }
    = f.input :prop_manuf_add_info, as: :text, input_html: { rows: 3 }
    .row
      .col-md-6
        = f.input :prop_manuf_chief_org
      .col-md-6
        = f.input :prop_manuf_chief_accountant
    .col.pt-5
      = f.submit t("proposals.buttons.#{button}"), class: 'btn btn-dark btn-block'
