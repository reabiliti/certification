<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if @certificate.errors.any? %>
      <div class="error text-danger">
        <p>
          <%= pluralize(@certificate.errors.count, "error") %> prohibited
          this certificate from being saved:
        </p>
        <ul>
          <% @certificate.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= simple_form_for @certificate do |f| %>
      <%= f.input :setting_id, collection: @settings, label_method: :set_name, value_method: :id %>
      <%= f.input :cer_number %>
      <%= f.input :cer_blank_number %>
      <%= f.input :cer_validity_from, as: :date, start_year: Date.today.year - 10,
                                                 end_year: Date.today.year + 10 %>
      <%= f.input :cer_validity_to, as: :date, start_year: Date.today.year - 10,
                                               end_year: Date.today.year + 10 %>
      <%= f.input :cer_product_name, as: :text, input_html: { rows: 4 } %>
      <%= f.input :cer_code_okp %>
      <%= f.input :cer_code_tn_ved %>
      <%= f.input :cer_regulation, as: :text, input_html: { rows: 4 } %>
      <%= f.input :cer_manufacturer, as: :text, input_html: { rows: 4 } %>
      <%= f.input :cer_certificate_issued, as: :text, input_html: { rows: 4 } %>
      <%= f.input :cer_based, as: :text, input_html: { rows: 4 } %>
      <%= f.input :cer_more_info, as: :text, input_html: { rows: 4 } %>
      <%= f.input :cer_org_chief %>
      <%= f.input :cer_org_expert %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>
