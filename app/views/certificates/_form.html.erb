<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if @certificate.errors.any? %>
      <div class="error text-danger">
        <p>
          <%= pluralize(@certificate.errors.count, "error") %> prohibited
          this certificate from being saved:
        </p>
        <ul>
          <% @certificate.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @certificate, local: true do |f| %>
      <%= f.label :cer_number %><br>
      <%= f.text_field :cer_number, class: "form-control" %>

      <%= f.label :cer_blank_number %><br>
      <%= f.text_field :cer_blank_number, class: "form-control" %>

      <%= f.label :cer_validity_from %><br>
      <%= f.text_field :cer_validity_from, class: "form-control" %>

      <%= f.label :cer_validity_to %><br>
      <%= f.text_field :cer_validity_to, class: "form-control" %>

      <%= f.label :cer_org_registration %><br>
      <%= f.text_field :cer_org_registration, class: "form-control" %>

      <%= f.label :cer_product_name %><br>
      <%= f.text_field :cer_product_name, class: "form-control" %>
      <p>
        <%= f.submit class: "btn btn-primary" %>
      </p>
    <% end %>
  </div>
</div>
