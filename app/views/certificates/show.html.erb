<% provide(:title, "Certificate #{@certificate.cer_number}") %>
<h1>Certificate <%= @certificate.cer_number %></h1>
<br>

<div class="table-responsive">
  <table class="table">
    <tr>
      <th>#</th>
      <th>Certificate number</th>
      <th>Blank certificatte</th>
      <th>Date from</th>
      <th>Date to</th>
      <th>#</th>
      <th>#</th>
    </tr>
    <tr>
      <td><%= @certificate.id %></td>
      <td><%= @certificate.cer_number %></td>
      <td><%= @certificate.cer_blank_number %></td>
      <td><%= (@certificate.cer_validity_from).strftime("%d.%m.%Y") unless (@certificate.cer_validity_from).nil? %></td>
      <td><%= (@certificate.cer_validity_to).strftime("%d.%m.%Y") unless (@certificate.cer_validity_to).nil? %></td>
      <td><%= link_to 'Edit', edit_certificate_path(@certificate) %></td>
      <td><%= link_to 'Print PDF', certificate_path(@certificate, format: 'pdf'), target: "_blank" %></td>
    </tr>
  </table>
</div>

<%= link_to 'Back', certificates_path %>
