= simple_form_for permission do |f|
  = f.input :certificate_id, as: :hidden
  .row
    .col-md-4
      = f.input :perm_registration_num
    .col-md-4
      = f.input :perm_registration_date,
                as: :date, start_year: Date.today.year - 10,
                end_year: Date.today.year + 10,
                html5: true
    .col-md-4
      = f.input :perm_expiry_date,
                as: :date, start_year: Date.today.year - 10,
                end_year: Date.today.year + 10,
                html5: true
  = f.input :perm_place_marking
  = f.input :perm_chief_name
  = f.input :perm_chief_org

  .col.pt-5
    = f.submit t("permissions.buttons.#{button}"), class: 'btn btn-dark btn-block'
