<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if @setting.errors.any? %>
      <div class="error text-danger">
        <p>
          <%= pluralize(@setting.errors.count, "error") %> prohibited
          this certificate from being saved:
        </p>
        <ul>
          <% @setting.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @setting, local: true do |f| %>

      <div class: "form-group">
        <%= f.label :set_name %><br>
        <%= f.text_field :set_name, class: "form-control" %>
      </div>

      <div class: "form-group">
        <%= f.label :set_organization %><br>
        <%= f.text_area :set_organization, rows: 5, class: "form-control" %>
      </div>

      <div class: "form-group">
        <%= f.label :set_at_x %><br>
        <%= f.text_field :set_at_x, class: "form-control" %>
      </div>

      <div class: "form-group">
        <%= f.label :set_at_y %><br>
        <%= f.text_field :set_at_y, class: "form-control" %>
      </div>

      <br>
      <p>
        <%= f.submit class: "btn btn-primary btn-block" %>
      </p>
    <% end %>
  </div>
</div>
